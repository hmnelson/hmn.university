<link rel="stylesheet" href="++plone++hmn.university/css/price_radio_widget.css" />
<fieldset class="price-radio-widget">
<!-- <legend>Ad spend</legend> -->
<div class="pills">

    <input type="radio" value="5" 
           tal:attributes="id string:${view/id}_5;
                           name view/name;
                           checked python:view.value == '5.0'">
    <label tal:attributes="for string:${view/id}_5;" >
        <tal:currency content="view/currency_symbol" />5
    </label>

