  <plone:portlet
    name="hmn.university.portlets.DepartmentStudentsPortlet"
    interface=".departmentStudentsPortlet.IDepartmentStudentsPortlet"
    assignment=".departmentStudentsPortlet.Assignment"
    renderer=".departmentStudentsPortlet.Renderer"
