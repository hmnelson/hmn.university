<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:browser="http://namespaces.zope.org/browser"
  xmlns:plone="http://namespaces.plone.org/plone">

  <include package="plone.app.portlets" />

  <!-- '-*- extra stuff goes here -*-' -->

  <plone:portlet
    name="hmn.university.portlets.DepartmentTeachersPortlet"
    interface=".departmentTeachersPortlet.IDepartmentTeachersPortlet"
    assignment=".departmentTeachersPortlet.Assignment"
    renderer=".departmentTeachersPortlet.Renderer"
